<%- include("header") %>
<div class="box" id="heading">
  <h1><%= kindOfDay %></h1>
</div>

<div class="box">
  <% newListItems.forEach(function(item){%>
  <form action="/delete" method="post">
    <div class="item">
      <input value="<%=item._id%>" name="checkbox" type="checkbox" onchange="this.form.submit()" />

      <p><%= item.name%></p>
    </div>
  </form>
  <% }) %>
  <form action="/" method="post" class="item">
    <input placeholder="new item" type="text" name="newItem" />
    <button name="list" type="submit"  >+</button>
  </form>
</div>


<%- include("footer") %>
